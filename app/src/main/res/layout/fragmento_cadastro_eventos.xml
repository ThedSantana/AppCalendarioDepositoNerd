
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="10dp"
    tools:context=".DepositoNerdAppActivity$PlaceholderFragment"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Adicione ao seu calendÃ¡rio:"

        android:textStyle="bold"
        android:id="@+id/textView"

        android:textColor="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Evento:"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:id="@+id/textView11"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nomeEvento"
        android:layout_below="@+id/textView11"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="#caf6f3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Categoria:"
        android:textStyle="bold"
        android:id="@+id/textView2"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/nomeEvento"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinnerCategorias"
        android:layout_below="@+id/textView2"
        style="@style/Base.Theme.AppCompat.Light"
        android:background="#caf6f3" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Data:"
        android:textStyle="bold"
        android:id="@+id/textView3"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/spinnerCategorias"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <DatePicker
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:id="@+id/datePickerData"
        android:layout_below="@+id/textView3"
        style="@style/Base.TextAppearance.AppCompat.Light.Widget.PopupMenu.Large"
        android:calendarViewShown="false" />

    <Button
        android:layout_width="124dip"
        android:layout_height="wrap_content"
        android:text="Gravar"
        android:id="@+id/botaoGravar"
        android:layout_below="@id/datePickerData"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/datePickerData"
         />

</RelativeLayout>
</ScrollView>